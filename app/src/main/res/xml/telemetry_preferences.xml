<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:key="@string/activity_kind"
        app:title="@string/activity_kind_label"
        app:useSimpleSummaryProvider="true"
        app:defaultValue="custom"
        app:entryValues="@array/activity_kind_values"
        app:entries="@array/activity_kind_entries"
        />

    <SwitchPreference
        app:key="@string/speed_metric"
        app:title="@string/speed"
        app:summaryOff="@string/disabled"
        app:summaryOn="@string/enabled"
        app:enabled="false"/>

    <SwitchPreference
        app:key="@string/gforce_metric"
